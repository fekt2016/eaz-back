{
  "watch": ["src"],
  "ignore": [
    "node_modules/**",
    "logs/**",
    "public/**",
    "data/**",
    "scripts/**",
    "*.md",
    "*.log",
    ".git/**",
    "test-*.js",
    "ecosystem.config.js",
    "nodemon.json",
    "package.json",
    "package-lock.json"
  ],
  "ext": "js,json",
  "exec": "node src/server.js",
  "legacyWatch": true,
  "verbose": true,
  "delay": 500,
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "colours": true
}
